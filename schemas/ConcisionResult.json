{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/ConcisionResult.json",
  "title": "ConcisionResult",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "description": "Optional id for this concision result" },
    "canonical_text": { "type": "string" },
    "atomic_candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "description": "Stable id for the atomic candidate" },
          "text": { "type": "string" },
          "origin_spans": { "type": "array", "items": { "$ref": "OriginSpan.json" } },
          "notes": { "type": ["string", "null"] }
        },
        "required": ["id", "text", "origin_spans"]
      }
    },
    "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "explanations": { "type": "array", "items": { "type": "string" }, "default": [] },
    "error": { "type": ["string", "null"] },
    "error_reason": { "type": ["string", "null"] }
  },
  "required": ["canonical_text", "atomic_candidates", "confidence"]
}