{
  "$id": "https://huggingface.co/VictorRowello/witty/schemas/FormalizationResult.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FormalizationResult",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "request_id": { "type": "string" },
    "original_text": { "type": "string" },
    "canonical_text": { "type": "string" },
    "enrichment_sources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "source_id": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "excerpt": { "type": "string" },
          "retrieval_score": { "type": "number" }
        },
        "required": ["source_id"]
      }
    },
    "atomic_claims": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" },
          "provenance": { "$ref": "https://huggingface.co/VictorRowello/witty/schemas/ProvenanceRecord.json" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "ambiguity_score": { "type": "number", "minimum": 0, "maximum": 1 },
          "modal_tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "reduction_rationale": { "type": "string" }
        },
        "required": ["id", "text", "provenance"]
      }
    },
    "legend": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "atomic_claim_id": { "type": "string" },
          "notes": { "type": "string" },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["atomic_claim_id"]
      }
    },
    "logical_form_candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "notation": { "type": "string" },
          "logical_ast": {
            "type": "object",
            "description": "JSON AST representing the formula"
          },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "warnings": {
            "type": "array",
            "items": { "type": "string" }
          },
          "provenance": { "$ref": "https://huggingface.co/VictorRowello/witty/schemas/ProvenanceRecord.json" }
        },
        "required": ["notation", "logical_ast"]
      }
    },
    "chosen_logical_form": { "type": "string" },
    "cnf": { "type": "string" },
    "cnf_clauses": {
      "type": "array",
      "items": { "type": "string" }
    },
    "modal_metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "modal_required": { "type": "boolean" },
        "modal_type": { "type": ["string", "null"] },
        "recommended_frame": { "type": ["string", "null"] }
      }
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "provenance": {
      "type": "array",
      "items": { "$ref": "https://huggingface.co/VictorRowello/witty/schemas/ProvenanceRecord.json" }
    }
  },
  "required": ["original_text", "canonical_text", "atomic_claims", "legend", "logical_form_candidates"]
}