{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/FormalizationResult.json",
  "title": "FormalizationResult",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "request_id": { "type": "string" },
    "original_text": { "type": "string" },
    "canonical_text": { "type": "string" },
    "enrichment_sources": {
      "type": "array",
      "items": { "$ref": "Document.json" },
      "default": []
    },
    "atomic_claims": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" },
          "provenance": { "$ref": "ProvenanceRecord.json" },
          "tags": { "type": "array", "items": { "type": "string" }, "default": [] },
          "ambiguity_score": { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
          "modal_tags": { "type": "array", "items": { "type": "string" }, "default": [] },
          "reduction_rationale": { "type": ["string", "null"] }
        },
        "required": ["id", "text", "provenance"]
      }
    },
    "legend": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "atomic_claim_id": { "type": "string" },
          "notes": { "type": ["string", "null"] },
          "metadata": { "type": ["object", "null"] }
        },
        "required": ["atomic_claim_id"]
      },
      "default": {}
    },
    "logical_form_candidates": {
      "type": "array",
      "items": { "$ref": "SymbolizerResult.json#/properties/logical_form_candidates/items" },
      "default": []
    },
    "chosen_logical_form": { "type": ["string", "null"] },
    "cnf": { "type": ["string", "null"] },
    "cnf_clauses": { "type": "array", "items": { "type": "string" }, "default": [] },
    "modal_metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "modal_required": { "type": "boolean" },
        "modal_type": { "type": ["string", "null"] },
        "recommended_frame": { "type": ["string", "null"] }
      }
    },
    "warnings": { "type": "array", "items": { "type": "string" }, "default": [] },
    "confidence": { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
    "provenance": {
      "type": "array",
      "items": { "$ref": "ProvenanceRecord.json" },
      "default": []
    }
  },
  "required": ["request_id", "original_text", "canonical_text", "atomic_claims"]
}