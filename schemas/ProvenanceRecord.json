{
  "$id": "https://huggingface.co/VictorRowello/witty/schemas/ProvenanceRecord.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProvenanceRecord",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "description": "Deterministic provenance id" },
    "created_at": { "type": "string", "format": "date-time" },
    "module_id": { "type": "string" },
    "module_version": { "type": "string" },
    "adapter_id": { "type": "string" },
    "prompt_template_id": { "type": "string" },
    "origin_spans": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "source": { "type": "string" },
          "start_char": { "type": "integer", "minimum": 0 },
          "end_char": { "type": "integer", "minimum": 0 },
          "excerpt": { "type": "string" }
        },
        "required": ["source", "start_char", "end_char"]
      }
    },
    "enrichment_sources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "source_id": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "snippet": { "type": "string" },
          "retrieval_score": { "type": "number" }
        },
        "required": ["source_id"]
      }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "ambiguity_flags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "reduction_rationale": { "type": "string" },
    "notes": { "type": "string" },
    "event_log": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "event": { "type": "string" },
          "detail": { "type": "string" }
        },
        "required": ["timestamp", "event"]
      }
    }
  },
  "required": ["id", "created_at", "module_id"]
}