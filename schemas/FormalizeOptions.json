{
  "$id": "https://huggingface.co/VictorRowello/witty/schemas/FormalizeOptions.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FormalizeOptions",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "retrieval_enabled": { "type": "boolean", "default": false },
    "top_k_symbolizations": { "type": "integer", "minimum": 1, "default": 1 },
    "llm_provider": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "adapter_id": { "type": "string" },
            "version": { "type": "string" }
          },
          "required": ["adapter_id"],
          "additionalProperties": true
        }
      ]
    },
    "verbosity": {
      "type": "string",
      "enum": ["compact", "verbose"],
      "default": "compact"
    },
    "quantifier_reduction_detail": {
      "type": "string",
      "enum": ["concise", "detailed"],
      "default": "detailed"
    },
    "allow_modal_advanced_cnf": { "type": "boolean", "default": false },
    "privacy_mode": {
      "type": "string",
      "enum": ["default", "strict"],
      "default": "default"
    }
  },
  "required": ["llm_provider"]
}