{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/OriginSpan.json",
  "title": "OriginSpan",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable id for this span (optional)"
    },
    "source": { "type": "string" },
    "start_char": { "type": "integer", "minimum": 0 },
    "end_char": { "type": "integer", "minimum": 0 },
    "excerpt": { "type": "string" }
  },
  "required": ["source", "start_char", "end_char"]
}